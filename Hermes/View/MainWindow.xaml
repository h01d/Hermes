<Window x:Class="Hermes.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hermes.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0" ResizeMode="CanMinimize">
    <Grid x:Name="gridMain" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="80*" MaxHeight="80" MinHeight="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Frame x:Name="frameMainTop" Content="Frame" Height="80" Margin="0" Grid.RowSpan="2" VerticalAlignment="Top" Source="/Hermes;component/View/TopPage.xaml"/>
        <Frame x:Name="frameMainBot" Content="Frame" Margin="0" Grid.Row="1" Source="/Hermes;component/View/ProfilePage.xaml"/>
    </Grid>
</Window>
